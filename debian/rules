#!/usr/bin/make -f
%:
	dh $@

DEB_HOST_ARCH := $(shell dpkg-architecture -qDEB_HOST_ARCH)

target = powder-sse3

ifeq ($(DEB_HOST_ARCH),amd64)
	target = powder-64-sse3
endif

override_dh_auto_build:
	make $(target)
	mv build/$(target) build/powder

override_dh_auto_clean:
	make clean
	rm build/powder*
